{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "types": [
      "node",
      "vite/client",
      "vitest"
    ],
    "paths": {
      "@/app/*": [
        "src/app/*"
      ],
      "@/presentation/*": [
        "src/presentation/*"
      ],
      "@/domain/*": [
        "src/domain/*"
      ],
      "@/application/*": [
        "src/application/*"
      ],
      "@/infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@/server/*": [
        "src/server/*"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.cjs",
    "src/**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
