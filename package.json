{
  "name": "t3-user-app",
  "version": "0.1.0",
  "private": true,
  "description": "T3 スタックを用いたユーザー管理アプリ",
  "scripts": {
    "dev": "next dev",
    "dev:server": "tsx watch src/server/interfaces/server.ts",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "NODE_ENV=test vitest --run",
    "test:frontend": "NODE_ENV=test vitest --run tests/frontend",
    "test:backend": "NODE_ENV=test vitest --run tests/backend",
    "test:e2e": "playwright test",
    "test:backend:debug": "cross-env NODE_OPTIONS=--inspect-brk vitest --no-file-parallelism --run tests/backend",
    "db:up": "podman-compose -f docker/docker-compose.yml up -d",
    "db:down": "podman-compose -f docker/docker-compose.yml down",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "postinstall": "pnpm prisma:generate",
    "prisma:migrate": "prisma migrate dev --schema prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema prisma/schema.prisma",
    "seed:users": "tsx scripts/seed-users.ts"
  },
  "dependencies": {
    "@playwright/test": "^1.47.1",
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^9.0.0",
    "@fastify/static": "^7.0.1",
    "@hookform/resolvers": "^3.9.0",
    "@mui/icons-material": "^6.1.1",
    "@mui/material": "^6.1.1",
    "@prisma/client": "5.18.0",
    "@tanstack/react-query": "^5.56.2",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@trpc/client": "^11.0.0-rc.446",
    "@trpc/react-query": "^11.0.0-rc.446",
    "@trpc/server": "^11.0.0-rc.446",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "next": "14.2.4",
    "next-auth": "^5.0.0-beta.19",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@types/jsdom": "^21.1.7",
    "cross-env": "^7.0.3",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.4",
    "prisma": "5.18.0",
    "jsdom": "^24.0.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@8.15.6"
}
