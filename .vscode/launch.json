{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Debug Vitest Backend",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "vitest",
        "--inspect-brk",
        "--no-file-parallelism",
        "--run",
        "tests/backend"
      ],
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug Next.js (pnpm dev)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "env": {
        "NODE_OPTIONS": "--inspect"
      },
      "console": "integratedTerminal",
      "restart": true,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
